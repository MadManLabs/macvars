# STARTUP DISK
ioreg -l -c IODeviceTree | awk -F\" '/com.apple.corestorage.lvg.name/{print $(NF-1)}'

# SERIAL NUMBER
ioreg -c IOPlatformExpertDevice -d 2 | awk -F\" '/IOPlatformSerialNumber/{print $(NF-1)}'

# COMPUTER NAME ("FRIENDLY NAME")
scutil --get ComputerName

# BONJOUR NAME
scutil --get LocalHostName

# COMPUTER SLEEP
systemsetup -getsleep | grep Computer | sed 's/Sleep: Computer sleeps //'

# DISPLAY SLEEP
systemsetup -getsleep | grep Display | sed 's/Sleep: Display sleeps //'

# DISK SLEEP
systemsetup -getsleep | grep Disk | sed 's/Sleep: Disk sleeps //'
