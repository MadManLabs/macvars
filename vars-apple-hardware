# STARTUP DISK
ioreg -l -c IODeviceTree | awk -F\" '/com.apple.corestorage.lvg.name/{print $(NF-1)}'

# SERIAL NUMBER
ioreg -c IOPlatformExpertDevice -d 2 | awk -F\" '/IOPlatformSerialNumber/{print $(NF-1)}'

# COMPUTER NAME ("FRIENDLY NAME")
scutil --get ComputerName

# BONJOUR NAME
scutil --get LocalHostName

# COMPUTER SLEEP
systemsetup -getsleep | awk '/Computer/{print $4,$5}' | sed 's/after//'

# DISPLAY SLEEP
systemsetup -getsleep | awk '/Display/{print $4,$5}' | sed 's/after//'

# DISK SLEEP
systemsetup -getsleep | awk '/Disk/{print $4,$5}' | sed 's/after//'
